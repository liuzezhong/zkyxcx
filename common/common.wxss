@import "/common/icons.wxss";

page {
	height: 100%;
}

.page {
	height: 100%;
	background-color: #f7f7f7;
	font-size: 24rpx;
	line-height: 40rpx;
	color: #808080;
}

.text-lg {
	font-size: 26rpx;
	line-height: 42rpx;
}

.text-black {
	color: #000;
}

.text-dark {
	color: #4c4c4c;
}

.section {
	margin-top: 24rpx;
	padding: 16rpx 24rpx;
	background-color: #fff;
}

.section.section-fullwidth {
	padding: 0;
}

.section.section-top {
	margin-top: 0;
}

.section.section-transparent {
	background-color: transparent;
}

.cell {
	background-color: #fff;
	border-bottom: #e6e6e6 1rpx solid;
}

.cell.cell-last {
	border-bottom: none;
}

.cell .cell-content {
	display: flex;
	align-items: center;
	padding: 16rpx 24rpx;
}

.cell .cell-input {
	display: flex;
	min-height: 72rpx;
	align-items: center;
	padding: 0 24rpx;
}

.cell-input>label {
	min-width: 200rpx;
	color: #808080;
}

.cell-input>picker, .cell-input>input {
	flex-grow: 1;
}

.btn {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 100%;
	height: 98rpx;
	background-color: #ff3d3d;
	color: #fff;
	font-size: 34rpx;
	border-radius: 0;
}

.btn.btn-bottom {
	position: fixed;
	bottom: 0;
}

.placeholder {
	color: #b3b3b3;
	font-size: 24rpx;
}

.icon {
	content: ' ';
	display: block;
	margin-right: 8rpx;
	width: 24rpx;
	height: 24rpx;
	background-position: center;
	background-repeat: no-repeat;
	background-size: 100% 100%;
}
.whitespace{
  height: 122rpx;
}
