/* pages/ranking/ranking.wxss */
.slide-image{  
    width: 100%;
}

.user-rank{
  background-color: white;
  width:100%;
  height: 114rpx;
  display:flex;
  flex-wrap: nowrap;   /*排不下不换行*/
  border:1px;
  border-bottom-style: solid;
  border-bottom-color: #e6e6e6;
  
}

.rank-self{
  padding-left: 34rpx;
  font-size: 26rpx;
  color: #4d4d4d;
  display:flex;
  flex-direction: row;
  align-items: center;
  
}

.userinfo-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 34rpx;
}

.userinfo-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;  
}

.user-ranking {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #fecc64;
  padding-left: 25rpx;
  font-weight: bold;
  font-size: 48rpx;
}

.rank-ming {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  color: #4d4d4d;
  padding-left: 5rpx;
}

.rank-icon {
  display: flex;
  flex-direction: row;
  align-items: center;
  
}

.kb-image {
  width: 35rpx;
  height: 35rpx;
}

.icon-number {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  padding-left: 10rpx;
  padding-right: 30rpx;
}

.rank-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:flex-end;
}

.rank-interval {
  background-color: #f7f7f7;
  width:100%;
  height: 30rpx;
}

.rank-no1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 25rpx;
}

.no1-image {
  width: 45rpx;
  height: 57rpx;
}

.friend-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 25rpx;
}

.rank-right {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.headerimg-right {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-left: 26rpx;
  padding-right:30rpx; 
  width: 100%;
}

.right-top {
  width: 100%;
  padding-bottom: 19rpx;
  display:flex;
  flex-direction: row;
  align-items: center;
}

.right-bottom {
  width: 100%;
  height: 5rpx;
  background-color: #d9d9d9;
  position: relative;
}

.rank-name {
  width: 80%;
  font-size: 26rpx;
  color: #4d4d4d;
  display:flex;
  flex-direction: row;
  align-items: center;
}

.rank-number {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  padding-left: 10rpx;
}

.right-bottom-cover {
  height: 5rpx;
  background-color: #febd00;
  position:absolute;
}

.friend-header-three {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 38rpx;
}

.rank-self-three {
  padding-left: 38rpx;
  width: 2%;
  font-size: 26rpx;
  color: #4d4d4d;
  display:flex;
  flex-direction: row;
  align-items: center;
}