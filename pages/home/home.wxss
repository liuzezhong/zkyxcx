/* home.wxss */
@import "/common/common.wxss";
page{
  background-color: #f7f7f7;
}

/*签到弹窗*/
.hidebox{
  width: 100%;
  height:100%;
  background-color:rgba(0, 0, 0, 0.7);
  position: fixed;
  z-index: 999;
}
.signin{
  margin-top: 35%;
}
.top{
  width: 480rpx;
  height: 250rpx;
  background-color: #3f84ff;
  border-radius: 10rpx 10rpx 0 0;
  margin: 0 auto;
  position: relative;
}
.cx1{
   position: absolute;
   top:-100rpx;
   width: 132rpx;
   height: 90rpx;
   left: 10rpx;
}
.cx2{
   position: absolute;
   top:-120rpx;
   width: 128rpx;
   height:108rpx;
   right: 10rpx;
}
.circle1{
  width: 176rpx;
  height:176rpx;
  border-radius: 50%;
  background-color:#ffe200; 
  position: absolute;
  top:-88rpx;
  right: 0;
  left: 0;
  margin: 0 auto;
}
.circle2{
  width: 75%;
  height:75%;
  border-radius: 50%;
  background-color:#ffe200; 
  border:10rpx solid #ffd200;
  margin:12rpx auto 0 auto;
}
.signtitle1{
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
  color: #f59b00;
  line-height: 135rpx;
}
.signtitle2{
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
  position: absolute;
  bottom: 64rpx;
  right: 0;
  left: 0;
  text-align: center;
}
.tran1{
  width: 76rpx;
  height: 54rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}
.tran2{
  width: 148rpx;
  height: 54rpx;
  position: absolute;
  bottom: 0;
  right: 0;
}
/*bottom*/
.bot{
  width: 480rpx;
  height: 250rpx;
  background-color: #ffffff;
  border-radius:0 0 10rpx 10rpx;
  margin: 0 auto;
  position: relative;
}
.bottitle1{
  font-size: 28rpx;
  color: #4c4c4c;
  text-align: center;
  padding-top: 40rpx;
}
.bottitle2{
  font-size: 24rpx;
  color: #808080;
  text-align: center;
  margin-top: 16rpx
}
.kbbtn{
  width: 100%;
  line-height: 88rpx;
  border-top: 1px solid #e6e6e6;
  font-size: 30rpx;
  color: #3f84ff;
  text-align: center;
  position: absolute;
  bottom: 0;
}


.header{
  box-sizing: border-box;
  width:100%;
  background-color:#3f84ff;
  padding:40rpx 24rpx;
  display: flex;
}
.header_left{
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}
.message{
  display: flex;
  flex-direction: row;
}
.portrait{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-grow: 0;
}
.userbox{
  flex-grow: 1;
  margin-left: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.username{
  font-size: 30rpx;
  color:#ffffff;
}
.score{
  font-size: 28rpx;
  color:#ffffff;
}
.header_left progress{
  margin-top: 16rpx;
} 


.header_right{
  flex-grow: 0;
  width: 80rpx;
  height: 80rpx;
  margin-left: 24rpx;
}

/*即将参与*/
.soon{
  background-color:#ffffff;
  padding-left:24rpx;
  margin-top: 24rpx;
  border-bottom:1px solid #e6e6e6; 
}
.title{
  font-size: 30rpx;
  color:#4c4c4c;
  padding: 16rpx 0;
  width:100%;
  border-bottom:1px solid #e6e6e6; 
}
.game{
  padding: 24rpx 0;
  border-bottom:1px solid #e6e6e6; 
  font-size: 28rpx;
  display: flex;
}
.game_left{
  flex-grow: 0;
  width:250rpx;
  height:134rpx;
}
.game_right{
  flex-grow: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.game_title{
  color:#4c4c4c;
}
.game_k{
  color:#808080;
}
.game_k text{
  color: #ffbe00;
}
.game_time{
  color:#fb7c73; 
}
.game_time1{
  color:#808080; 
}
.game:last-child{
  border-bottom:none; 
}