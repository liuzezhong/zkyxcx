/* index.wxss */
@import "/common/common.wxss";

.list {
	display: flex;
	flex-direction: column;
  background-color: #fff;
}

.header {
	display: flex;
  margin-top: 30rpx;
}

.header .logo {
	box-sizing: border-box;
	display: block;
	margin: 24rpx 16rpx 24rpx 24rpx;
	width: 98rpx;
	height: 98rpx;
	border-radius: 100%;
	border: solid 1rpx #ddd;
}

.header .info {
	flex-grow: 1;
	margin: 16rpx 24rpx 16rpx 16rpx;
}

.inline {
	display: flex;
	justify-content: space-between;
  margin-top: 8rpx;
}

.inline2 {
	display: flex;
	justify-content: space-between;
  margin-top: 8rpx;

}

.pull-right {
	margin-left: auto;
	margin-right: 8rpx;
}

.banner {
	display: block;
	width: 100%;
	height: 300rpx;
}

.with-icon {
	display: flex;
	flex-direction: row;
	align-items: center;
}

.icon-to-text {
  margin-left: 10rpx;
}

.meiyougengduole {
  margin-top:30rpx;
  margin-bottom:30rpx;
  display: flex;
  align-items: center;
  justify-content:center; 
  background-color: #fff;
}